/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.nav{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}
.recommend{
  margin-top: 150rpx;
  display: block;
}

.add{
  margin-right: 20rpx;
}
.to-catalog{
  display: inline-block;
  border: 1px solid #000;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}

.loading-container{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #fff;
}
.loading{
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -30rpx;
  margin-top: -30rpx;
}